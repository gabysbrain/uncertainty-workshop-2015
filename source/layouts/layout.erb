<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>
      <%= current_page.data.title || "Visualization for decision making under uncertainty" %>
    </title>

    <%= stylesheet_link_tag 'site' %>
    <%= javascript_include_tag 'all' %>
  </head>
  <body>
    <header>
      <%= partial "nav" %>
      <div class="banner">
        <%= partial "carousel" %>
        <div class="caption">
          <h1>Visualization for decision making under uncertainty</h1>
          <h2>
            A workshop at the 
            <%= link_to 'IEEE VIS 2015 conference', 'http://ieeevis.org' %>
            on October 26, 2015 in Chicago, IL USA
          </h2>
        </div>
      </div>
    </header>
    <section class="sidebar">
      <div id="vis-logo">
        Located at
        <% link_to 'http://ieeevis.org' do %>
          <%= image_tag '/images/vis2015_logo.png', width: '200px' %>
        <% end %>
      </div>
      <div>
        <h1>Important dates</h1>
        <%= partial "dates" %>
        </ul>
      </div>
      <div>
        <h1>Organizers</h1>
        <ul class="important-list">
          <% data.organizers.each do |o| %>
            <li>
              <%= link_to o.name, o.url %>: <%= o.uni %>
            </li>
          <% end %>
        </ul>
      </div>
      <div>
        <h1>Contact</h1>
        <%= mail_to 'kpotter@uoregon.edu' %>
      </div>
    </section>
    <section class="main" id="main">
      <%=yield%>
    </section>
    <footer>
      <!-- nothing here yet -->
    </footer>
    <%= google_analytics_universal_tag %>
  </body>
</html>

